/*Inverso de Número
Escreva uma função que inverte os dígitos de um número (ex: 1234 ? 4321)*/

#include <stdio.h>
#include <string.h>
#include <locale.h>

void invert(char p[]){
    int t = strlen(p);
    int j = t - 1;
    char temp;
    for(int i = 0; i < j; i++, j--) {
        temp = p[i];
        p[i] = p[j];
        p[j] = temp;
    }
}

int main(){
    setlocale(LC_ALL, "Portuguese");
    char digits[30];
    printf("Digite uma sequência de números: ");
    scanf("%s", digits);
    invert(digits);
    printf("os digitos foram: %s", digits);
    return 0;
}
